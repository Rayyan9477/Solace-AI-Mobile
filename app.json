{
  "expo": {
    "name": "Solace AI Mobile",
    "slug": "solace-ai-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#FFFFFF",
    "primaryColor": "#3B82F6",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.solace.ai.mobile",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone for voice notes and voice commands.",
        "NSCameraUsageDescription": "We need access to your camera for profile pictures.",
        "NSPhotoLibraryUsageDescription": "We need access to your photos for profile pictures.",
        "NSLocationWhenInUseUsageDescription": "We need your location to suggest nearby mental health resources.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.solace.ai.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-haptics",
      "expo-speech",
      "expo-linear-gradient",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3B82F6"
        }
      ],
      [
        "expo-updates",
        {
          "checkAutomatically": "ON_LOAD"
        }
      ]
    ],
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#3B82F6",
      "androidMode": "default",
      "androidCollapsedTitle": "Solace AI Mobile",
      "iosDisplayInForeground": true
    }
  }
}
